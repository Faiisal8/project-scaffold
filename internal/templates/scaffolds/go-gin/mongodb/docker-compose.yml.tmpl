services:
  db:
    image: mongo:7
    ports:
      - "27017:27017"
    volumes:
      - mongo_data:/data/db

  app:
    build: .
    depends_on:
      - db
    env_file:
      - .env
    environment:
      MONGO_URL: mongodb://db:27017/{{.ProjectName}}
    ports:
      - "${APP_PORT:-8080}:8080"

volumes:
  mongo_data:

