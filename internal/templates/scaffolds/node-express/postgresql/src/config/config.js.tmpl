import dotenv from "dotenv";

dotenv.config();

export const config = {
  port: parseInt(process.env.PORT || "8080", 10),
  env: process.env.NODE_ENV || "development",
  logLevel: process.env.LOG_LEVEL || "info",

  http: {
    readTimeout: parseInt(process.env.HTTP_READ_TIMEOUT || "5000", 10),
    writeTimeout: parseInt(process.env.HTTP_WRITE_TIMEOUT || "10000", 10),
    shutdownTimeout: parseInt(process.env.SHUTDOWN_TIMEOUT || "10000", 10),
  },

  db: {
    host: process.env.DB_HOST || "localhost",
    port: parseInt(process.env.DB_PORT || "5432", 10),
    user: process.env.DB_USER || "postgres",
    password: process.env.DB_PASSWORD || "postgres",
    database: process.env.DB_NAME || "{{.ProjectName}}",
    ssl: process.env.DB_SSLMODE === "require",
  },
};

if (!config.db.host || !config.db.user || !config.db.database) {
  throw new Error("Database configuration is incomplete");
}
